                transform: translateY(-100vh) translateX(100px) rotate(360deg);
                opacity: 0;
            }
        }

        /* Responsive */
        @media (max-width: 768px) {
            .step-item {
                flex-direction: column;
                text-align: center;
            }

            .step-item:hover {
                transform: translateY(-10px);
            }

            .features-grid {
                grid-template-columns: 1fr;
