    <script>
        // Video Error Handling
        const video = document.getElementById('backgroundVideo');
        if (video) {
            video.addEventListener('error', function() {
                console.log('Video not found, using gradient background only');
                document.querySelector('.video-overlay').style.background = 
                    'linear-gradient(180deg, rgba(10,10,10,0.95) 0%, rgba(88,101,242,0.6) 50%, rgba(10,10,10,0.95) 100%)';
            });
            
            video.play().catch(function(error) {
                console.log('Video autoplay failed:', error);
                document.querySelector('.video-overlay').style.background = 
                    'linear-gradient(180deg, rgba(10,10,10,0.95) 0%, rgba(88,101,242,0.6) 50%, rgba(10,10,10,0.95) 100%)';
            });
        }

        // Create Floating Particles (Reduced count for better performance)
        function createParticles() {
            const particlesContainer = document.getElementById("particles");
            const particleCount = 10; // Reduced from 20 to 10 for better performance

            for (let i = 0; i < particleCount; i++) {
                const particle = document.createElement("div");
                particle.className = "particle";
                particle.style.left = Math.random() * 100 + "%";
                particle.style.animationDelay = Math.random() * 20 + "s";
                particle.style.animationDuration = (Math.random() * 10 + 15) + "s";
                particle.style.willChange = "transform, opacity";
                particlesContainer.appendChild(particle);
            }
        }

        createParticles();

        // Auto-Advancing Presentation System
        const sections = document.querySelectorAll('.presentation-section');
        const totalSections = sections.length;
        let currentSection = 0;
        const sectionDuration = 4000; // 4 seconds per section (reduced from 6 for faster, smoother transitions)

        // Progress Bar Element
        const progressBar = document.getElementById('progressBar');
        const sectionCounter = document.getElementById('sectionCounter');

        // Counter Animation for Stats (Optimized)
        function animateCounter(element, target, duration = 1000) {
            const start = 0;
            const increment = target / (duration / 16);
            let current = start;

            const timer = setInterval(() => {
                current += increment;
                if (current >= target) {
                    element.textContent = target;
                    clearInterval(timer);
                } else {
                    element.textContent = Math.floor(current);
                }
            }, 16);
        }

        // Show Section with Animation (Optimized for performance)
        function showSection(index) {
            const section = sections[index];
            if (!section) return;

            // Hide all sections first
            sections.forEach((sec, i) => {
                if (i === index) {
                    sec.classList.add('active');
                } else {
                    sec.classList.remove('active');
                    // Reset all animations in hidden sections
                    gsap.set(sec.querySelectorAll('.feature-card, .step-item, .stat-number'), { clearProps: "all" });
                }
            });

            // Update progress bar with faster animation
            const progress = ((index + 1) / totalSections) * 100;
            progressBar.style.width = progress + '%';

            // Update section counter
            sectionCounter.textContent = `${index + 1} / ${totalSections}`;

            // Wait for CSS transition to complete, then animate
            setTimeout(() => {
                // Ensure section is still active before animating
                if (!section.classList.contains('active')) return;
                
                // Section-specific animations (optimized with shorter durations)
                switch(index) {
                    case 0: // Hero Section
                        const heroTitle = section.querySelector("#heroTitle");
                        const heroSubtitle = section.querySelector("#heroSubtitle");
                        const heroLogo = section.querySelector(".hero-logo");
                        if (heroTitle) {
                            gsap.set(heroTitle, { clearProps: "all" });
                            gsap.from(heroTitle, { duration: 0.5, y: 20, opacity: 0, ease: "power2.out", force3D: true });
                        }
                        if (heroSubtitle) {
                            gsap.set(heroSubtitle, { clearProps: "all" });
                            gsap.from(heroSubtitle, { duration: 0.5, y: 15, opacity: 0, delay: 0.2, ease: "power2.out", force3D: true });
                        }
                        if (heroLogo) {
                            gsap.set(heroLogo, { clearProps: "all" });
                            gsap.from(heroLogo, { duration: 0.6, scale: 0.8, opacity: 0, ease: "back.out(1.2)", force3D: true });
                        }
                        break;

                    case 1: // Features Part 1
                    case 2: // Features Part 2
                        const sectionTitle = section.querySelector('.section-title');
                        const featureCards = section.querySelectorAll('.feature-card');
                        
                        // Reset all cards
                        featureCards.forEach(card => {
                            card.classList.remove('show');
                            gsap.set(card, { clearProps: "all" });
                        });
                        
                        if (sectionTitle) {
                            gsap.set(sectionTitle, { clearProps: "all" });
                            gsap.from(sectionTitle, { duration: 0.4, y: 20, opacity: 0, ease: "power2.out", force3D: true });
                        }
                        
                        featureCards.forEach((card, i) => {
                            gsap.fromTo(card, 
                                { opacity: 0, y: 20 },
                                { opacity: 1, y: 0, duration: 0.4, delay: 0.2 + (i * 0.1), ease: "power2.out", force3D: true, onComplete: () => card.classList.add('show') }
                            );
                        });
                        break;

                    case 3: // Stats
                        const statsTitle = section.querySelector('.section-title');
                        const stats = section.querySelectorAll('.stat-number');
                        
                        // Reset stats
                        stats.forEach(stat => {
                            gsap.set(stat, { clearProps: "all" });
                        });
                        
                        if (statsTitle) {
                            gsap.set(statsTitle, { clearProps: "all" });
                            gsap.from(statsTitle, { duration: 0.4, y: 20, opacity: 0, ease: "power2.out", force3D: true });
                        }
                        
                        stats.forEach((stat, i) => {
                            gsap.from(stat, { 
                                duration: 0.4, 
                                scale: 0.8, 
                                opacity: 0, 
                                delay: 0.2 + (i * 0.1), 
                                ease: "back.out(1.2)",
                                force3D: true,
                                onComplete: () => {
                                    const target = parseInt(stat.getAttribute("data-target"));
                                    animateCounter(stat, target, 1000);
                                }
                            });
                        });
                        break;

                    case 4: // How It Works
                        const howTitle = section.querySelector('.section-title');
                        const steps = section.querySelectorAll('.step-item');
                        
                        // Reset steps
                        steps.forEach(step => {
                            step.classList.remove('show');
                            gsap.set(step, { clearProps: "all" });
                        });
                        
                        if (howTitle) {
                            gsap.set(howTitle, { clearProps: "all" });
                            gsap.from(howTitle, { duration: 0.4, y: 20, opacity: 0, ease: "power2.out", force3D: true });
                        }
                        
                        steps.forEach((step, i) => {
                            gsap.fromTo(step,
                                { opacity: 0, x: -30 },
                                { opacity: 1, x: 0, duration: 0.4, delay: 0.2 + (i * 0.15), ease: "power2.out", force3D: true, onComplete: () => step.classList.add('show') }
                            );
                        });
                        break;

                    case 5: // Final CTA
                        const finalH2 = section.querySelector(".final-cta h2");
                        const finalP = section.querySelector(".final-cta p");
                        const finalButton = section.querySelector(".final-cta .cta-button");
                        
                        if (finalH2) {
                            gsap.set(finalH2, { clearProps: "all" });
                            gsap.from(finalH2, { duration: 0.5, y: 20, opacity: 0, ease: "power2.out", force3D: true });
                        }
                        if (finalP) {
                            gsap.set(finalP, { clearProps: "all" });
                            gsap.from(finalP, { duration: 0.5, y: 15, opacity: 0, delay: 0.2, ease: "power2.out", force3D: true });
                        }
                        if (finalButton) {
                            gsap.set(finalButton, { clearProps: "all" });
                            gsap.from(finalButton, { duration: 0.5, scale: 0.9, opacity: 0, delay: 0.4, ease: "back.out(1.2)", force3D: true });
                        }
                        break;
                }
            }, 150);
        }

        // Auto-advance through sections
        function nextSection() {
            currentSection++;
            if (currentSection >= totalSections) {
                currentSection = 0; // Loop back to start
            }
            showSection(currentSection);
        }

        // Initialize: Show first section
        showSection(0);

        // Auto-advance timer - ensure it starts properly
        let autoAdvanceTimer = null;
        
        function startAutoAdvance() {
            if (autoAdvanceTimer) {
                clearInterval(autoAdvanceTimer);
            }
            autoAdvanceTimer = setInterval(() => {
                nextSection();
            }, sectionDuration);
        }
        
        // Start the auto-advance
        startAutoAdvance();

        // Pause on hover (optional - allows user to read)
        document.addEventListener('mouseenter', () => {
            if (autoAdvanceTimer) {
                clearInterval(autoAdvanceTimer);
                autoAdvanceTimer = null;
            }
        });

        document.addEventListener('mouseleave', () => {
            startAutoAdvance();
        });

        // Touch/Mobile support - tap to advance
        let touchStartX = 0;
        let touchEndX = 0;

        document.addEventListener('touchstart', (e) => {
            touchStartX = e.changedTouches[0].screenX;
            if (autoAdvanceTimer) {
                clearInterval(autoAdvanceTimer);
                autoAdvanceTimer = null;
            }
        });

        document.addEventListener('touchend', (e) => {
            touchEndX = e.changedTouches[0].screenX;
            handleSwipe();
            startAutoAdvance();
        });

        function handleSwipe() {
            if (touchEndX < touchStartX - 50) {
                // Swipe left - next section
                nextSection();
            }
            if (touchEndX > touchStartX + 50) {
                // Swipe right - previous section
                currentSection--;
                if (currentSection < 0) currentSection = totalSections - 1;
                showSection(currentSection);
            }
        }

        // Keyboard navigation
        document.addEventListener('keydown', (e) => {
            if (e.key === 'ArrowRight' || e.key === ' ') {
                nextSection();
                startAutoAdvance();
            } else if (e.key === 'ArrowLeft') {
                currentSection--;
                if (currentSection < 0) currentSection = totalSections - 1;
                showSection(currentSection);
                startAutoAdvance();
            }
        });
    </script>
