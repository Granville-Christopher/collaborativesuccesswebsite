                    </div>
                </div>
                
                <div class="stat-card stat-teal">
                    <div class="stat-icon">üìÜ</div>
                    <div class="stat-info">
                        <div class="stat-value" id="newUsersMonth">-</div>
                        <div class="stat-label">New This Month</div>
                    </div>
                </div>
                
                <div class="stat-card stat-warning">
                    <div class="stat-icon">‚ö†Ô∏è</div>
                    <div class="stat-info">
                        <div class="stat-value" id="expiringSoon">-</div>
                        <div class="stat-label">Expiring Soon (7d)</div>
                    </div>
                </div>
            </div>

            <!-- Payment Stats -->
            <h2 class="section-title">üí≥ Payments & Revenue</h2>
            <div class="stats-grid payment-stats">
                <div class="stat-card stat-success">
                    <div class="stat-icon">üíµ</div>
                    <div class="stat-info">
                        <div class="stat-value" id="paymentsToday">-</div>
                        <div class="stat-label">Payments Today</div>
                    </div>
                </div>
                
                <div class="stat-card stat-info-card">
                    <div class="stat-icon">üìä</div>
                    <div class="stat-info">
                        <div class="stat-value" id="paymentsWeek">-</div>
                        <div class="stat-label">Payments This Week</div>
                    </div>
                </div>
                
                <div class="stat-card stat-primary">
                    <div class="stat-icon">üìà</div>
                    <div class="stat-info">
                        <div class="stat-value" id="paymentsMonth">-</div>
                        <div class="stat-label">Payments This Month</div>
                    </div>
                </div>
                
                <div class="stat-card stat-orange">
                    <div class="stat-icon">üí∏</div>
                    <div class="stat-info">
                        <div class="stat-value" id="revenueToday">-</div>
                        <div class="stat-label">Revenue Today</div>
                    </div>
                </div>
                
                <div class="stat-card stat-warning">
                    <div class="stat-icon">üí¥</div>
                    <div class="stat-info">
                        <div class="stat-value" id="revenueWeek">-</div>
                        <div class="stat-label">Revenue This Week</div>
                    </div>
                </div>
                
                <div class="stat-card stat-purple">
                    <div class="stat-icon">üí∂</div>
                    <div class="stat-info">
                        <div class="stat-value" id="revenueMonth">-</div>
                        <div class="stat-label">Revenue This Month</div>
                    </div>
                </div>
            </div>

            <!-- Charts Section -->
            <h2 class="section-title">üìä Analytics & Trends</h2>
            <div class="dashboard-grid">
                <div class="chart-card">
                    <h3>üìä Subscription Tier Distribution</h3>
                    <div class="chart-container">
                        <canvas id="tierChart"></canvas>
                    </div>
                </div>

                <div class="chart-card">
                    <h3>üí∞ Revenue Trend (Last 30 Days)</h3>
                    <div class="chart-container">
                        <canvas id="revenueChart"></canvas>
                    </div>
                </div>

                <div class="chart-card" style="grid-column: 1 / -1;">
                    <h3>üìà User Growth</h3>
                    <div class="tabs">
                        <button class="tab active" onclick="switchTab('daily')">Daily</button>
                        <button class="tab" onclick="switchTab('weekly')">Weekly</button>
                        <button class="tab" onclick="switchTab('monthly')">Monthly</button>
                    </div>
                    <div class="tab-content active" id="daily-tab">
                        <div class="chart-container">
                            <canvas id="growthChart"></canvas>
                        </div>
                    </div>
                    <div class="tab-content" id="weekly-tab">
                        <div class="chart-container">
                            <canvas id="weeklyChart"></canvas>
                        </div>
                    </div>
                    <div class="tab-content" id="monthly-tab">
                        <div class="chart-container">
                            <canvas id="monthlyChart"></canvas>
                        </div>
                    </div>
                </div>
            </div>

            <!-- Users Table -->
            <h2 class="section-title">üë• User Management</h2>
            <div class="table-container">
                <table class="users-table">
                    <thead>
                        <tr>
                            <th>Email</th>
                            <th>Tier</th>
                            <th>Status</th>
                            <th>Expiry Date</th>
                            <th>Tokens</th>
                            <th>Created</th>
                            <th>Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        <% users.forEach(user => { %>
                            <tr>
                                <td><%= user.email %></td>
                                <td>
                                    <span class="badge badge-<%= user.tier === 'pro' ? 'pro' : user.tier === 'basic' ? 'basic' : 'none' %>">
                                        <%= user.tier.toUpperCase() %>
                                    </span>
                                </td>
                                <td>
                                    <% if (user.is_subscribed) { %>
                                        <span class="badge badge-success">Active</span>
                                    <% } else { %>
                                        <span class="badge badge-danger">Inactive</span>
                                    <% } %>
                                </td>
                                <td>
                                    <% if (user.expiry_date) { %>
                                        <%= new Date(user.expiry_date).toLocaleDateString() %>
                                    <% } else { %>
                                        <span class="text-muted">No expiry</span>
                                    <% } %>
                                </td>
                                <td>
                                    <span class="token-count">
                                        üì± <%= user.expo_tokens %> | üîî <%= user.fcm_tokens %>
                                    </span>
                                </td>
                                <td>
                                    <% if (user.created_at) { %>
                                        <%= new Date(user.created_at).toLocaleDateString() %>
                                    <% } else { %>
                                        <span class="text-muted">N/A</span>
                                    <% } %>
                                </td>
                                <td>
                                    <a href="/user/<%= user._id %>" class="btn btn-sm btn-primary">Edit</a>
                                </td>
                            </tr>
                        <% }); %>
                    </tbody>
                </table>
            </div>
        </div>
    </div>

    <script>
        let tierChart, growthChart, weeklyChart, monthlyChart, revenueChart;
        let growthData = { days: [], weeks: [], months: [] };

        // Sidebar toggle
        function toggleSidebar() {
            const sidebar = document.getElementById('sidebar');
            const overlay = document.getElementById('sidebarOverlay');
            sidebar.classList.toggle('open');
            overlay.classList.toggle('active');
        }

        // Load comprehensive dashboard stats
        async function loadDashboardStats() {
            try {
                const res = await fetch('/api/analytics/dashboard-stats');
                const data = await res.json();
                
                // User stats - only update sidebar
                const activeUsers = data.users?.active || 0;
                document.getElementById('sidebarActiveUsers').textContent = activeUsers;
                
                document.getElementById('newUsersToday').textContent = data.users?.newToday || 0;
                document.getElementById('sidebarNewToday').textContent = data.users?.newToday || 0;
                
                document.getElementById('newUsersWeek').textContent = data.users?.newWeek || 0;
                document.getElementById('newUsersMonth').textContent = data.users?.newMonth || 0;
                
                const expiringSoon = data.users?.expiringSoon || 0;
                document.getElementById('expiringSoon').textContent = expiringSoon;
                document.getElementById('sidebarExpiring').textContent = expiringSoon;
                
                // Payment stats
                document.getElementById('paymentsToday').textContent = data.payments?.today || 0;
                document.getElementById('paymentsWeek').textContent = data.payments?.week || 0;
                document.getElementById('paymentsMonth').textContent = data.payments?.month || 0;
                
                const formatCurrency = (amount) => {
                    return `‚Ç¶${(amount / 100).toLocaleString()}`;
                };
                
                const revenueToday = formatCurrency(data.payments?.revenueToday || 0);
                const revenueWeek = formatCurrency(data.payments?.revenueWeek || 0);
                const revenueMonth = formatCurrency(data.payments?.revenueMonth || 0);
                
                document.getElementById('revenueToday').textContent = revenueToday;
                document.getElementById('revenueWeek').textContent = revenueWeek;
                document.getElementById('revenueMonth').textContent = revenueMonth;
            } catch (error) {
                console.error('Error loading dashboard stats:', error);
            }
        }

        // Load revenue stats - only update sidebar
        async function loadRevenueStats() {
            try {
                const res = await fetch('/api/analytics/revenue');
                const data = await res.json();
                const revenue = data.total ? `‚Ç¶${(data.total / 100).toLocaleString()}` : '‚Ç¶0';
                document.getElementById('sidebarRevenue').textContent = revenue;
            } catch (error) {
                console.error('Error loading revenue stats:', error);
                document.getElementById('sidebarRevenue').textContent = '‚Ç¶0';
            }
        }

        // Load expired subscriptions - only update sidebar
        async function loadExpiredStats() {
            try {
                const res = await fetch('/api/analytics/expired');
                const data = await res.json();
                const expired = data.count || 0;
                document.getElementById('sidebarExpired').textContent = expired;
            } catch (error) {
                console.error('Error loading expired stats:', error);
                document.getElementById('sidebarExpired').textContent = '0';
            }
        }

        // Load linked accounts stats - only update sidebar
        async function loadLinkedAccountsStats() {
            try {
                const res = await fetch('/api/analytics/linked-accounts');
                const data = await res.json();
                const linked = data.total || 0;
                document.getElementById('sidebarLinked').textContent = linked;
            } catch (error) {
                console.error('Error loading linked accounts stats:', error);
                document.getElementById('sidebarLinked').textContent = '0';
            }
        }

        // Load tier distribution
        async function loadTierDistribution() {
            try {
                const res = await fetch('/api/analytics/tier-distribution');
                const data = await res.json();
                
                const ctx = document.getElementById('tierChart').getContext('2d');
                tierChart = new Chart(ctx, {
                    type: 'doughnut',
                    data: {
                        labels: ['Basic', 'Pro', 'None'],
                        datasets: [{
                            data: [data.basic, data.pro, data.none],
                            backgroundColor: ['#F59E0B', '#5865F2', '#9CA3AF'],
                            borderWidth: 0
                        }]
                    },
                    options: {
                        responsive: true,
                        maintainAspectRatio: false,
                        plugins: {
                            legend: { position: 'bottom' }
                        }
                    }
                });
            } catch (error) {
                console.error('Error loading tier distribution:', error);
            }
        }

        // Load revenue chart
        async function loadRevenueChart() {
            try {
                const res = await fetch('/api/analytics/revenue-chart');
                const data = await res.json();
                
                const ctx = document.getElementById('revenueChart').getContext('2d');
                revenueChart = new Chart(ctx, {
                    type: 'line',
                    data: {
                        labels: data.days.map(d => {
                            const date = new Date(d.date);
                            return date.toLocaleDateString('en-US', { month: 'short', day: 'numeric' });
                        }),
                        datasets: [{
                            label: 'Revenue (‚Ç¶)',
                            data: data.days.map(d => (d.revenue / 100).toFixed(0)),
                            borderColor: '#F59E0B',
                            backgroundColor: 'rgba(245, 158, 11, 0.1)',
                            tension: 0.4,
                            fill: true,
                            borderWidth: 3
                        }]
                    },
                    options: {
                        responsive: true,
                        maintainAspectRatio: false,
                        plugins: { legend: { display: false } },
                        scales: {
                            y: {
                                beginAtZero: true,
                                ticks: {
                                    callback: function(value) {
                                        return '‚Ç¶' + value.toLocaleString();
                                    }
                                }
                            }
                        }
                    }
                });
            } catch (error) {
                console.error('Error loading revenue chart:', error);
            }
        }

        // Load user growth
        async function loadUserGrowth() {
            try {
                const res = await fetch('/api/analytics/user-growth');
                growthData = await res.json();
                
                // Daily chart
                const dailyCtx = document.getElementById('growthChart').getContext('2d');
                growthChart = new Chart(dailyCtx, {
                    type: 'line',
                    data: {
                        labels: growthData.days.map(d => {
                            const date = new Date(d.date);
                            return date.toLocaleDateString('en-US', { month: 'short', day: 'numeric' });
                        }),
                        datasets: [{
                            label: 'New Users',
                            data: growthData.days.map(d => d.count),
                            borderColor: '#5865F2',
                            backgroundColor: 'rgba(88, 101, 242, 0.1)',
                            tension: 0.4,
                            fill: true,
                            borderWidth: 3
                        }]
                    },
                    options: {
                        responsive: true,
                        maintainAspectRatio: false,
                        plugins: { legend: { display: false } },
                        scales: { y: { beginAtZero: true } }
                    }
                });

                // Weekly chart
                const weeklyCtx = document.getElementById('weeklyChart').getContext('2d');
                weeklyChart = new Chart(weeklyCtx, {
                    type: 'bar',
                    data: {
                        labels: growthData.weeks.map(w => w.week),
                        datasets: [{
                            label: 'New Users',
                            data: growthData.weeks.map(w => w.count),
                            backgroundColor: '#5865F2',
                            borderRadius: 8
                        }]
                    },
                    options: {
                        responsive: true,
                        maintainAspectRatio: false,
                        plugins: { legend: { display: false } },
                        scales: { y: { beginAtZero: true } }
                    }
                });

                // Monthly chart
                const monthlyCtx = document.getElementById('monthlyChart').getContext('2d');
                monthlyChart = new Chart(monthlyCtx, {
                    type: 'bar',
                    data: {
                        labels: growthData.months.map(m => m.month),
                        datasets: [{
                            label: 'New Users',
                            data: growthData.months.map(m => m.count),
                            backgroundColor: '#5865F2',
                            borderRadius: 8
                        }]
                    },
                    options: {
                        responsive: true,
                        maintainAspectRatio: false,
                        plugins: { legend: { display: false } },
                        scales: { y: { beginAtZero: true } }
                    }
                });
            } catch (error) {
                console.error('Error loading user growth:', error);
            }
        }

        function switchTab(tab) {
            document.querySelectorAll('.tab').forEach(t => t.classList.remove('active'));
            document.querySelectorAll('.tab-content').forEach(c => c.classList.remove('active'));
            event.target.classList.add('active');
            document.getElementById(tab + '-tab').classList.add('active');
        }

        function searchUsers() {
            const search = document.getElementById('searchInput').value;
            if (search) {
                window.location.href = `/dashboard?search=${encodeURIComponent(search)}`;
            } else {
                window.location.href = '/dashboard';
            }
        }
        
        document.getElementById('searchInput').addEventListener('keypress', function(e) {
            if (e.key === 'Enter') {
                searchUsers();
            }
        });

        // Load all data on page load
        loadDashboardStats();
        loadRevenueStats();
        loadExpiredStats();
        loadLinkedAccountsStats();
        loadTierDistribution();
        loadRevenueChart();
        loadUserGrowth();
    </script>
</body>
</html>
